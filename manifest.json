{
  "name": "Save Notes",
  "version": "0.5",
  "description": "Create notes and save important bullet points from an article",
  "background": { 
     "page":"bg.html"
     },
     "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "images/on.png"
     },

   "manifest_version": 2,
   "content_scripts": [
   {
      "matches": ["<all_urls>"],
     "js": ["content.js"],
     "css": ["content.css"],
     "run_at": "document_end",
     "all_frames": true
   }
   ],
  "permissions": ["storage" ,"tabs","downloads","<all_urls>","activeTab","https://od-api.oxforddictionaries.com/api/v1/entries/en/*"]
}